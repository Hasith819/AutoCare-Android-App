<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header with App Name and Menu Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AutoCare"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Vehicle Registration Number -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Registration Number"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/etRegistrationNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter registration number"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp" />

    <!-- Vehicle Brand Dropdown -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Brand"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp" />

    <Spinner
        android:id="@+id/spinnerBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp" />

    <!-- Vehicle Model Dropdown -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Model"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp" />

    <Spinner
        android:id="@+id/spinnerModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp" />

    <!-- Manufactured Year -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manufactured Year"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/etManufacturedYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter manufactured year"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Vehicle"
        android:backgroundTint="@color/black"
        android:textColor="@color/yellow"
        android:layout_marginTop="51dp" />

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_home_24"
                android:contentDescription="Home icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Add Service Details -->
        <LinearLayout
            android:id="@+id/llAddService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_car_repair_24"
                android:contentDescription="Add Service icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Service"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>